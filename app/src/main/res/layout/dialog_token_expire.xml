<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dialog.TokenExpireDialog">


    <LinearLayout
        android:background="@drawable/ui_round_solid_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dp16"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/dp96"
            android:layout_height="@dimen/dp96"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp8"
            android:src="@drawable/ic_round_close"
            app:civ_border_color="@color/app_color"
            app:civ_border_width="@dimen/dp4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp4"
            android:text="@string/oops_text"
            android:textSize="@dimen/text_32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp4"
            android:text="Token Was Expired!!"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16" />


        <Button
            android:id="@+id/submit_token_expire_dialog"
            android:layout_width="@dimen/dp150"
            android:layout_height="@dimen/dp38"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp4"
            android:layout_weight="1"
            android:background="@drawable/app_button"
            android:text="@string/click_here_text"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>