<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/parent_setting_fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:orientation="vertical"
    tools:context=".ui.fragments.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp8">

            <ImageView
                android:id="@+id/logout_setting_fragment"
                android:layout_width="@dimen/dp48"
                android:layout_height="@dimen/dp48"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/dp8"
                android:layout_marginTop="@dimen/dp8"
                android:layout_marginEnd="@dimen/dp8"
                android:layout_marginBottom="@dimen/dp8"
                android:src="@drawable/app_logout_icon" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp8"
                android:layout_marginTop="@dimen/dp16"
                android:layout_marginEnd="@dimen/dp8"
                android:layout_marginBottom="@dimen/dp8"
                android:background="@drawable/transparent_background"
                android:paddingHorizontal="@dimen/dp8"
                android:paddingTop="@dimen/dp24"
                android:paddingBottom="@dimen/dp8"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/category_text"
                    android:textColor="@color/white" />

                <Spinner
                    android:id="@+id/category_spinner_setting_fragment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ui_round_solid_grey"
                    android:padding="@dimen/dp8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp200"
                android:layout_height="@dimen/dp38"
                android:layout_centerHorizontal="true"
                android:background="@drawable/app_button">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp8"
                    android:text="@string/preferences_text"
                    android:textColor="@color/app_notification_bar" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp8"
                android:layout_marginTop="@dimen/dp16"
                android:layout_marginEnd="@dimen/dp8"
                android:layout_marginBottom="@dimen/dp8"
                android:background="@drawable/transparent_background"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dp8"
                android:paddingTop="@dimen/dp24"
                android:paddingBottom="@dimen/dp8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp24"
                    android:layout_marginVertical="@dimen/dp8"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_gravity="center"
                        android:text="@string/available_coins_text"
                        android:textColor="@color/white" />

                    <LinearLayout
                        android:gravity="end"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/ads_reward_setting_fragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:layout_gravity="center"
                            android:text="@string/text_0"
                            android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="@dimen/dp24"
                        android:layout_height="@dimen/dp24"
                        android:src="@drawable/app_small_dollar" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp8"
                    android:text="@string/purchase_coins_text"
                    android:textColor="@color/white" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp16"
                    android:layout_marginVertical="@dimen/dp8"
                    android:gravity="center"
                    android:text="@string/click_below_icon_to_purchase_text"
                    android:textColor="@color/white" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="9">


                    <ImageView
                        android:layout_width="@dimen/dp48"
                        android:layout_height="@dimen/dp48"
                        android:layout_weight="3"
                        android:src="@drawable/app_dollar" />

                    <ImageView
                        android:layout_width="@dimen/dp48"
                        android:layout_height="@dimen/dp48"
                        android:layout_weight="3"
                        android:src="@drawable/app_dollar" />

                    <RelativeLayout
                        android:layout_width="@dimen/dp48"
                        android:layout_height="@dimen/dp48"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:background="@color/transparent"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/ads_show_setting_fragment"
                            android:layout_width="@dimen/dp48"
                            android:layout_height="@dimen/dp48"
                            android:background="@drawable/app_button" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dp4"
                            android:layout_marginTop="@dimen/dp4"
                            android:text="view\nvideo"
                            android:textColor="@color/white" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="9">


                    <ImageView
                        android:layout_width="@dimen/dp48"
                        android:layout_height="@dimen/dp16"
                        android:layout_weight="3"
                        android:src="@drawable/ui_horizontal_line_white" />

                    <ImageView
                        android:layout_width="@dimen/dp48"
                        android:layout_height="@dimen/dp16"
                        android:layout_weight="3"
                        android:src="@drawable/ui_horizontal_line_white" />

                    <ImageView
                        android:layout_width="@dimen/dp48"
                        android:layout_height="@dimen/dp16"
                        android:layout_weight="3"
                        android:src="@drawable/ui_horizontal_line_white" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="9">


                    <TextView
                        android:layout_width="@dimen/dp48"
                        android:layout_height="@dimen/dp16"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="@string/coins_150_text"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="@dimen/dp48"
                        android:layout_height="@dimen/dp16"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="@string/coins_50_text"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="@dimen/dp48"
                        android:layout_height="@dimen/dp16"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="@string/coins_10_text"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp200"
                android:layout_height="@dimen/dp38"
                android:layout_centerHorizontal="true"
                android:background="@drawable/app_button">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp8"
                    android:text="@string/get_more_coins_text"
                    android:textColor="@color/app_notification_bar" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp8"
                android:layout_marginTop="@dimen/dp16"
                android:layout_marginEnd="@dimen/dp8"
                android:layout_marginBottom="@dimen/dp8"
                android:background="@drawable/transparent_background"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dp8"
                android:paddingTop="@dimen/dp24"
                android:paddingBottom="@dimen/dp8">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image_setting_fragment"
                        android:layout_width="@dimen/dp128"
                        android:layout_height="@dimen/dp128"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="@dimen/dp16"
                        android:layout_marginTop="@dimen/dp16"
                        android:layout_marginEnd="@dimen/dp16"
                        android:layout_marginBottom="@dimen/dp16"
                        android:src="@drawable/profile_avatar" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/dp4"
                        android:text="@string/full_name_text"
                        android:textColor="@color/white" />

                    <EditText
                        android:id="@+id/name_setting_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp8"
                        android:background="@drawable/ui_round_solid_grey"
                        android:imeOptions="actionDone"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:padding="@dimen/dp8"
                        android:scrollHorizontally="true" />

                    <Button
                        android:id="@+id/save_user_profile_setting_fragment"
                        android:layout_width="@dimen/dp150"
                        android:layout_height="@dimen/dp38"
                        android:layout_gravity="center"
                        android:layout_marginVertical="@dimen/dp16"
                        android:layout_weight="1"
                        android:background="@drawable/app_button"
                        android:text="@string/save_text"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp200"
                android:layout_height="@dimen/dp38"
                android:layout_centerHorizontal="true"
                android:background="@drawable/app_button">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp8"
                    android:text="@string/edit_profile_text"
                    android:textColor="@color/app_notification_bar" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp8"
                android:layout_marginTop="@dimen/dp16"
                android:layout_marginEnd="@dimen/dp8"
                android:layout_marginBottom="@dimen/dp8"
                android:background="@drawable/transparent_background"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dp8"
                android:paddingTop="@dimen/dp24"
                android:paddingBottom="@dimen/dp8">

                <TextView
                    android:id="@+id/user_name_setting_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/name_text"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp16"
                    android:layout_marginBottom="@dimen/dp4"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp8"
                        android:layout_weight="1.875"
                        android:gravity="start"
                        android:text="@string/old_password_text" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/dp8"
                        android:layout_weight="0.125"
                        android:src="@drawable/ic_round_key" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/old_password_setting_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ui_round_solid_grey"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingVertical="@dimen/dp8"
                        android:paddingStart="@dimen/dp8"
                        android:paddingEnd="@dimen/dp38"
                        android:scrollHorizontally="true" />

                    <ImageView
                        android:id="@+id/old_password_visible_invisible_setting_fragment"
                        android:layout_width="@dimen/dp24"
                        android:layout_height="@dimen/dp24"
                        android:layout_alignParentEnd="true"
                        android:layout_marginHorizontal="@dimen/dp8"
                        android:layout_marginTop="@dimen/dp4"
                        android:src="@drawable/ic_round_eye" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp16"
                    android:layout_marginBottom="@dimen/dp4"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp8"
                        android:layout_weight="1.875"
                        android:gravity="start"
                        android:text="@string/new_password_text" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/dp8"
                        android:layout_weight="0.125"
                        android:src="@drawable/ic_round_key" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/new_password_setting_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ui_round_solid_grey"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingVertical="@dimen/dp8"
                        android:paddingStart="@dimen/dp8"
                        android:paddingEnd="@dimen/dp38"
                        android:scrollHorizontally="true" />

                    <ImageView
                        android:id="@+id/new_password_visible_invisible_setting_fragment"
                        android:layout_width="@dimen/dp24"
                        android:layout_height="@dimen/dp24"
                        android:layout_alignParentEnd="true"
                        android:layout_marginHorizontal="@dimen/dp8"
                        android:layout_marginTop="@dimen/dp4"
                        android:src="@drawable/ic_round_eye" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp16"
                    android:layout_marginBottom="@dimen/dp4"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp8"
                        android:layout_weight="1.875"
                        android:gravity="start"
                        android:text="@string/confirm_new_password_text" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/dp8"
                        android:layout_weight="0.125"
                        android:src="@drawable/ic_round_key" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/confirm_new_password_setting_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ui_round_solid_grey"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingVertical="@dimen/dp8"
                        android:paddingStart="@dimen/dp8"
                        android:paddingEnd="@dimen/dp38"
                        android:scrollHorizontally="true" />

                    <ImageView
                        android:id="@+id/confirm_new_password_visible_invisible_setting_fragment"
                        android:layout_width="@dimen/dp24"
                        android:layout_height="@dimen/dp24"
                        android:layout_alignParentEnd="true"
                        android:layout_marginHorizontal="@dimen/dp8"
                        android:layout_marginTop="@dimen/dp4"
                        android:src="@drawable/ic_round_eye" />
                </RelativeLayout>

                <Button
                    android:id="@+id/submit_password_setting_fragment"
                    android:layout_width="@dimen/dp150"
                    android:layout_height="@dimen/dp38"
                    android:layout_gravity="center"
                    android:layout_marginVertical="@dimen/dp16"
                    android:layout_weight="1"
                    android:background="@drawable/app_button"
                    android:text="@string/submit_text"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp200"
                android:layout_height="@dimen/dp38"
                android:layout_centerHorizontal="true"
                android:background="@drawable/app_button">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp8"
                    android:text="@string/change_password_text"
                    android:textColor="@color/app_notification_bar" />
            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp8"
                android:layout_marginTop="@dimen/dp16"
                android:layout_marginEnd="@dimen/dp8"
                android:layout_marginBottom="@dimen/dp8"
                android:background="@drawable/transparent_background"
                android:paddingHorizontal="@dimen/dp8"
                android:paddingTop="@dimen/dp24"
                android:paddingBottom="@dimen/dp8">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/rating_button_setting_fragment"
                        android:layout_width="@dimen/dp250"
                        android:layout_height="@dimen/dp38"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp16"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/app_ratings_button"
                        android:text="@string/signup_text"
                        android:textColor="@color/white" >

                        <ImageView
                            android:src="@drawable/app_rating_star_icon"
                            android:layout_width="@dimen/dp24"
                            android:layout_margin="@dimen/dp8"
                            android:layout_height="@dimen/dp24"/>

                        <TextView
                            android:textColor="@color/white"
                            android:text="@string/rating_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/privacy_policy_setting_fragment"
                        android:layout_width="@dimen/dp250"
                        android:layout_height="@dimen/dp38"
                        android:layout_gravity="center"
                        android:layout_marginVertical="@dimen/dp8"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/app_ratings_button"
                        android:text="@string/signup_text"
                        android:textColor="@color/white" >

                        <ImageView
                            android:src="@drawable/app_privacy_policy"
                            android:layout_width="@dimen/dp24"
                            android:layout_margin="@dimen/dp8"
                            android:layout_height="@dimen/dp24"/>

                        <TextView
                            android:textColor="@color/white"
                            android:text="@string/privacy_policy_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/terms_condition_setting_fragment"
                        android:layout_width="@dimen/dp250"
                        android:layout_height="@dimen/dp38"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/app_ratings_button"
                        android:text="@string/signup_text"
                        android:textColor="@color/white" >

                        <ImageView
                            android:src="@drawable/app_terms_condition"
                            android:layout_width="@dimen/dp24"
                            android:layout_margin="@dimen/dp8"
                            android:layout_height="@dimen/dp24"/>

                        <TextView
                            android:textColor="@color/white"
                            android:text="@string/terms_condition_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp200"
                android:layout_height="@dimen/dp38"
                android:layout_centerHorizontal="true"
                android:background="@drawable/app_button">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp8"
                    android:text="@string/others_text"
                    android:textColor="@color/app_notification_bar" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
