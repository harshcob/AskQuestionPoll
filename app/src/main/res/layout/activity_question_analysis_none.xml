<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/parent_analysis_question_activity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:orientation="vertical"
    tools:context=".ui.activity.QuestionAnalysisNoneActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp32"
        android:layout_marginVertical="@dimen/dp8"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/report_question_analysis_question_activity"
            android:layout_width="@dimen/dp48"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp4"
            android:layout_marginTop="@dimen/dp4"
            android:layout_marginEnd="@dimen/dp4"
            android:layout_marginBottom="@dimen/dp4"
            android:src="@drawable/app_report_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="@dimen/dp32"
                android:layout_height="@dimen/dp32"
                android:layout_gravity="center"
                android:src="@drawable/app_coins" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp8"
                android:text="200"
                android:textColor="@color/app_color"
                android:textSize="@dimen/text_20" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/exit_analysis_question_activity"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_round_right_arrow" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/option1_percentage_analysis_question_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/option2_percentage_analysis_question_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/option_image_layout_analysis_question_activity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp96"
            android:layout_alignParentBottom="true"
            android:background="@color/app_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp96"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/image_option1_analysis_question_activity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@drawable/app_default_image_1" />

                <ImageView
                    android:id="@+id/image_option2_analysis_question_activity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@drawable/app_default_image_2" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="@dimen/dp24"
                android:src="@drawable/app_or" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/option_text_layout_analysis_question_activity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp96"
            android:layout_alignParentBottom="true"
            android:background="@color/app_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp96"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/text_option1_analysis_question_activity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp2"
                    android:layout_weight="0.875"
                    android:gravity="center"
                    android:text="@string/sample_text"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25" />

                <TextView
                    android:id="@+id/text_option2_analysis_question_activity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp2"
                    android:layout_weight="0.875"
                    android:gravity="center"
                    android:text="@string/sample_text"
                    android:textColor="@color/black" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="@dimen/dp24"
                android:src="@drawable/app_or" />

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>