<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".ui.activity.ViewMyQuestionActivity">


    <LinearLayout
        android:paddingVertical="@dimen/dp8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/question_image_view_my_question_activity"
            android:layout_width="@dimen/dp96"
            android:layout_height="@dimen/dp96"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:src="@drawable/app_default_img" />

        <TextView
            android:id="@+id/question_description_view_my_question_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp8"
            android:gravity="center"
            tools:text="@string/sample_text"
            android:textColor="@color/app_color"
            tools:textSize="@dimen/text_16" />

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/option_image_layout_view_my_question_activity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp96"
            android:background="@color/app_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp96"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/image_option1_view_my_question_activity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@drawable/app_default_image_1" />

                <ImageView
                    android:id="@+id/image_option2_view_my_question_activity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@drawable/app_default_image_2" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="@dimen/dp24"
                android:src="@drawable/app_or" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/option_text_layout_view_my_question_activity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp96"
            android:layout_marginBottom="@dimen/dp16"
            android:background="@color/app_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp96"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/text_option1_view_my_question_activity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp2"
                    android:layout_weight="0.875"
                    android:gravity="center"
                    android:textColor="@color/black"
                    tools:text="@string/sample_text" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25" />

                <TextView
                    android:id="@+id/text_option2_view_my_question_activity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp2"
                    android:layout_weight="0.875"
                    android:gravity="center"
                    android:textColor="@color/black"
                    tools:text="@string/sample_text" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="@dimen/dp24"
                android:src="@drawable/app_or" />

        </RelativeLayout>

        <LinearLayout
            android:layout_margin="@dimen/dp8"
            android:background="@drawable/transparent_background"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="@dimen/dp8"
                android:textColor="@color/white"
                android:text="@string/preferences_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:weightSum="10"
                android:layout_margin="@dimen/dp8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:text="@string/gender_text"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/gender_view_my_question_activity"
                    android:background="@drawable/transparent_background"
                    android:padding="@dimen/dp8"
                    android:gravity="center"
                    android:text="@string/gender_text"
                    android:layout_weight="7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <LinearLayout
                android:weightSum="10"
                android:layout_margin="@dimen/dp8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:text="@string/category_text"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/category_view_my_question_activity"
                    android:background="@drawable/transparent_background"
                    android:padding="@dimen/dp8"
                    android:gravity="center"
                    android:text="@string/category_text"
                    android:layout_weight="7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:weightSum="10"
                android:layout_margin="@dimen/dp8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:text="@string/country_text"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/country_view_my_question_activity"
                    android:background="@drawable/transparent_background"
                    android:padding="@dimen/dp8"
                    android:gravity="center"
                    android:text="@string/country_text"
                    android:layout_weight="7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>



            <Button
                android:id="@+id/cancel_view_my_question_activity"
                android:layout_width="@dimen/dp150"
                android:layout_height="@dimen/dp38"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/dp16"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/app_button"
                android:text="@string/cancel_text" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>