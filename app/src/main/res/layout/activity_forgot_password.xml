<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/parent_forgot_password_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".ui.activity.ForgotPasswordActivity"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/dp8"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginEnd="@dimen/dp8"
        android:layout_marginBottom="@dimen/dp8"
        android:background="@drawable/transparent_background"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dp8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp16"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:layout_weight="1.875"
                android:gravity="start"
                android:text="@string/email_text" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/dp8"
                android:layout_weight="0.125"
                android:src="@drawable/ic_round_email" />
        </LinearLayout>

        <EditText
            android:id="@+id/email_forgot_password_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp8"
            android:background="@drawable/ui_round_solid_grey"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:padding="@dimen/dp8"
            android:scrollHorizontally="true" />

        <Button
            android:id="@+id/submit_forgot_password_activity"
            android:layout_width="@dimen/dp150"
            android:layout_height="@dimen/dp38"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/dp16"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/app_button"
            android:text="@string/reset_text" />
    </LinearLayout>

</RelativeLayout>